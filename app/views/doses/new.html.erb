<div class="container padded">
  <h3 class="text-center">Ajouter un ingrédient</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :ingredient, collection: Ingredient.order(:name), prompt: "Choisis en un" %>
      <%= f.input :description %>
      <%= f.submit "Envoyer", class: "btn btn-primary" %>
      <% end %>
      <div>
        <%= link_to "Aller en arrière", cocktails_path, class: "btn btn-warning btn-sm" %>
      </div>
    </div>
  </div>
</div>
